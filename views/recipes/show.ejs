<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <header>
        <%- include('../partials/header-full-nav.ejs') %>
    </header>





    <h1>
        <%=recipe.name%>
    </h1>
    <a href="/recipes">
        <h2>check out all recipes</h2>
    </a>
    <% if (currentUser == recipeCreator){ %>
        
            <a href="/recipes/<%=recipe._id%>/edit"><button>Edit</button></a>
            <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="post">
                <button type="submit">Delete <%= recipe.name %>?</button>
            </form>
       
        <% } %>


        <h2>Hi, <%=currentUser%></h2>
        <h2>Created by: <%=recipeCreator%></h2>

       <form action="/recipes/<%=recipe._id%>/saved" method="POST">
        <input hidden name="recipeId" value="<%= recipe._id %>">
        <button type="submit">SAVE</button>
       </form>

        


            <footer>
                <%- include('../partials/footer.ejs') %>
            </footer>

    <script src="js/script.js"></script>
</body>

</html>